# Contact Manager - Simple Security Configuration

# Prevent access to sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.sql$">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to config and logs files
<Files ~ "^(config|logs)/">
    Order allow,deny
    Deny from all
</Files>

# Disable directory browsing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

